<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txv_big_box"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:background="@drawable/home_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/txv_meu_negocio"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/home_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txv_big_box"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/txv_experts"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/home_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txv_big_box"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
